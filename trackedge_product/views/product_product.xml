    <record id="trackedge_view_product_product_tree" model="ir.ui.view">
        <field name="name">trackedge.product.product.tree</field>
        <field name="model">product.product</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree import="false" string="Item List">
                <field name="default_code" required="1"/>
                <field name="name" options="{'max_width': '600px', 'line_clamp': '1'}" string="Description" widget="dynamic_popover_text"/>
                <field invisible="1" name="pack_ok"/>
                <field invisible="1" name="active"/>
            </tree></field>
    </record>
    <record id="trackedge_view_product_product_search" model="ir.ui.view">
        <field name="name">trackedge.product.template.search</field>
        <field name="model">product.product</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Product">
                <field filter_domain="['|', ('default_code', 'ilike', self), ('oem_alt_part_number', 'ilike', self)]" name="default_code" string="Item #"/>
                <field filter_domain="[('name', 'ilike', self)]" name="name" string="Item Description"/>
                <field name="oem_alt_part_number" string="Alt Part#"/>
                <separator/>
                <field filter_domain="[('class_id', 'child_of', raw_value)]" name="class_id"/>
                <field filter_domain="[('category_id', 'child_of', raw_value)]" name="category_id"/>
                <field filter_domain="[('type_ids', 'child_of', raw_value)]" name="type_ids"/>
                <separator/>
                <filter domain="[('type','=','service')]" name="services" string="Services"/>
                <filter domain="[('type', '=', 'product')]" name="product" string="Products"/>
                <filter domain="[('type', '=', 'consu')]" name="consumable" string="Consumables"/>
                <separator/>
                <filter domain="[('active','=',False)]" name="inactive" string="Archived"/>

                <group expand="0" string="Group By">
                    <filter context="{'group_by':'class_id'}" domain="[]" name="class" string="Class"/>
                    <filter context="{'group_by':'category_id'}" domain="[]" name="category" string="Category"/>
                    <filter context="{'group_by':'oem_id'}" domain="[]" name="oem_id" string="OEM"/>
                </group>
            </search></field>
    </record>
    <record id="trackedge_product_kanban_view" model="ir.ui.view">
        <field name="name">trackedge Product Kanban</field>
        <field name="model">product.product</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban create="false" delete="false" edit="false" import="false" sample="1">
                <field name="id"/>
                <field name="lst_price"/>
                <field name="activity_state"/>
                <progressbar colors='{"planned": "success", "today": "warning", "overdue": "danger"}' field="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field class="oe_avatar" name="part_image_url" widget="image"/>
                                <!--                                <img t-att-src="kanban_image('product.product', 'part_image_url', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>-->
                            </div>
                            <div class="oe_kanban_details">
