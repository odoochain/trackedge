                                    <small t-if="record.default_code.value">
                                        [
                                        <field name="default_code"/>
                                        ]
                                    </small>
                                </strong>
                                <div class="o_kanban_tags_section">

                                </div>
                                <div name="tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban></field>
    </record>
