<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="request_event_view_search" model="ir.ui.view">
        <field name="model">request.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="request_id"/>
                <field name="event_type_id"/>
                <field name="user_id"/>
                <group expand="0" name="group_group_by" string="Group by...">
                    <filter context="{'group_by': 'event_type_id'}" name="filter_group_by_event_type" string="Type"/>
                    <filter context="{'group_by': 'request_id'}" name="filter_group_by_request" string="Request"/>
                    <filter context="{'group_by': 'user_id'}" name="filter_group_by_user_id" string="User"/>
                </group>
            </search></field>
    </record>
    <record id="request_event_view_tree" model="ir.ui.view">
        <field name="model">request.event</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="date"/>
                <field name="event_type_id"/>
                <field name="request_id"/>
                <field name="user_id"/>
            </tree></field>
    </record>
    <record id="request_event_view_form" model="ir.ui.view">
        <field name="model">request.event</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <field invisible="1" name="event_code"/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <group name="group_left">
                            <field name="date"/>
                            <field name="event_type_id" options="{'no_open': True}"/>
                        </group>
                        <group name="group_right">
                            <field name="request_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group name="group_event_data" string="Event Data">
                        <group colspan="4" invisible="event_code not in ('assigned', 'reassigned', 'unassigned')" name="group_event_data_assign">
                            <field name="old_user_id"/>
                            <field name="new_user_id"/>
                        </group>
                        <group colspan="4" invisible="event_code != 'changed'" name="group_event_data_changed">
                            <label colspan="4" for="old_text"/>
                            <field colspan="4" name="old_text" nolabel="1"/>
                            <label colspan="4" for="new_text"/>
                            <field colspan="4" name="new_text" nolabel="1"/>
                        </group>
                        <group colspan="4" invisible="event_code not in ('closed', 'reopened', 'stage-changed')" name="group_event_data_stage_change">
                            <group>
                                <field name="old_stage_id"/>
                                <field name="new_stage_id"/>
                            </group>
                            <group>
                                <field name="route_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'category-changed'" name="group_event_data_category_change">
                            <group>
                                <field name="old_category_id"/>
                            </group>
                            <group>
                                <field name="new_category_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'deadline-changed'" name="group_event_data_deadline_changed">
                            <group>
                                <field name="old_deadline"/>
                            </group>
                            <group>
                                <field name="new_deadline"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'priority-changed'" name="group_event_data_priority">
                            <group>
                                <field colspan="4" name="old_priority"/>
                                <field colspan="4" name="new_priority"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'impact-changed'" name="group_event_data_impact">
                            <group>
                                <field colspan="4" name="old_impact"/>
                                <field colspan="4" name="new_impact"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'urgency-changed'" name="group_event_data_urgency">
                            <group>
                                <field colspan="4" name="old_urgency"/>
                                <field colspan="4" name="new_urgency"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'author-changed'" name="group_event_data_author">
                            <group>
                                <field colspan="4" name="old_author_id"/>
                                <field colspan="4" name="new_author_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code != 'partner-changed'" name="group_event_data_partner">
                            <group>
                                <field colspan="4" name="old_partner_id"/>
                                <field colspan="4" name="new_partner_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code not in ('timetracking-start-work', 'timetracking-stop-work')" name="group_event_data_timetracking">
                            <group>
                                <field colspan="4" name="timesheet_line_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code not in ('request-archived', 'request-unarchived')" name="group_event_data_archived">
                            <group>
                                <field colspan="4" name="request_active"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code not in ('subrequest-stage-changed', 'subrequest-closed')" name="group_event_data_subrequest">
                            <group>
                                <field name="subrequest_id"/>
                            </group>
                            <group>
                                <field name="subrequest_old_stage_id"/>
                                <field name="subrequest_new_stage_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code not in ('parent-request-stage-changed', 'parent-request-closed')" name="group_event_data_parent_request">
                            <group>
                                <field name="parent_old_stage_id"/>
                                <field name="parent_new_stage_id"/>
                            </group>
                            <group>
                                <field name="parent_route_id"/>
                            </group>
                        </group>
                        <group colspan="4" invisible="event_code not in 'parent-request-changed'" name="group_event_data_parent_request_changed">
                            <group>
                                <field name="parent_old_id"/>
                                <field name="parent_new_id"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form></field>
    </record>
    <record id="action_request_event_view" model="ir.actions.act_window">
        <field name="name">Request Event</field>
        <field name="res_model">request.event</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
