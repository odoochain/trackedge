<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="request_wizard_set_parent_form_view" model="ir.ui.view">
        <field name="name">request.wizard.set.parent.form</field>
        <field name="model">request.wizard.set.parent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field invisible="1" name="warning_type"/>
                    <div class="alert alert-warning" colspan="4" invisible="warning_type != 'one_parent'" name="alert_warning_one_parent" role="alert">
                        Some of selected requests already has parent!
                    </div>
                    <div class="alert alert-danger" colspan="4" invisible="warning_type != 'few_parent'" name="alert_warning_few_parent" role="alert">
                        Selected requests has different parents!
                    </div>
                    <group>
                        <field name="request_ids" readonly="1" widget="many2many_tags"/>
                        <field domain="[('id', 'not in', request_ids)]" name="parent_id" options="{'no_create': True}"/>
                        <field name="summary"/>
                        <field name="author_id" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button class="btn-primary" name="do_set_parent" string="Apply" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
    <record id="action_request_wizard_set_parent" model="ir.actions.act_window">
        <field name="res_model">request.wizard.set.parent</field>
        <field name="binding_model_id" ref="generic_request.model_request_request"/>
        <field name="name">Change parent request</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
