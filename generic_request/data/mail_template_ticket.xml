<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="email_template_new_mr_helpdesk_ticket_template" model="mail.template">
            <field name="name">Helpdesk Email Template for newly created MR Ticket Template</field>
            <field name="model_id" ref="generic_request.model_request_request"/>
            <field name="email_from">"${object.company_id.mr_default_email_sender_name | safe}" &lt;${(object.company_id.mr_default_email_sender_email or user.email) | safe}&gt;</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">[Ticket#${object.name}] New Ticket: ${object.company_id.mr_default_email_company_code} MR - ${object.company_id.mr_default_email_initial_tt_code}${object.tt_no} via TrackedgeAssist</field>
            <field name="body_html"><![CDATA[
            Hi User,
            <p>
            [Ticket#${object.name}] has been created in queue ${object.company_id.mr_default_email_company_name}.
            </p><br/><br/>
            ${object.engineer_id.name} via TrackedgeAssist for  ${object.company_id.mr_default_email_company_name} <${object.company_id.mr_default_email_sender_email}> wrote:
            <br/><br/>
            <div style="background:#DCDCDC">
                ${object.request_text|safe}
            </div>
            <br/><br/>
            <div style="margin: 16px 0px 16px 0px;">
                            <a href=${ctx['url']}
                                style="background-color: #21364E; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Go to Helpdesk
                            </a>
                        </div>

            <b>Your Trackedge HelpDesk Team.</b>
            ]]></field>
        </record>

        <record id="email_template_acknowledge_mr_helpdesk_ticket_template" model="mail.template">
            <field name="name">Acknowledge MR Ticket Email Template</field>
            <field name="model_id" ref="generic_request.model_request_request"/>
            <field name="email_from">"${object.company_id.mr_default_email_sender_name | safe}" &lt;${(object.company_id.mr_default_email_sender_email or user.email) | safe}&gt;</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">RE: [Ticket#${object.name}] New Ticket: ${object.company_id.mr_default_email_company_code} MR - ${object.company_id.mr_default_email_initial_tt_code}${object.tt_no} via TrackedgeAssist</field>
            <field name="body_html"><![CDATA[
            Dear ${object.engineer_id.name},
            <br/>
            <br/>
            We acknowledge receipt of your request.
            <br/>
            <br/>
            We shall issue ....
            <br/>
            <br/>
            Kindly assist to fill the attached Fault Card Form for the failure.
            <br/>
            <br/>
            Await packing lists shortly.
            <br/>
            <br/>
            <br/>
            ${user.name}
            <b>Your Trackedge HelpDesk Team.</b>
            ]]></field>
        </record>

        <record id="email_template_helpdesk_ticket_trackedge_assigned_template" model="mail.template">
            <field name="name">Helpdesk Email Template for assigned created Ticket Template</field>
            <field name="model_id" ref="generic_request.model_request_request"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Trackedge Assist - Help Desk Ticket created ${object.name}</field>
            <field name="body_html"><![CDATA[
            Hi,
            <p>
            A new ticket has been assigned to you. Please click below for details.</p><br/><br/>

            <div style="margin: 16px 0px 16px 0px;">
                            <a href=${ctx['url']}
                                style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Go to Helpdesk
                            </a>
                        </div>

            <b>Your Trackedge HelpDesk Team.</b>
            ]]></field>
        </record>

        <record id="email_template_helpdesk_ticket_trackedge_customer_template" model="mail.template">
            <field name="name">Helpdesk Email Template for newly created Ticket Template</field>
            <field name="model_id" ref="generic_request.model_request_request"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Trackedge Assist - Help Desk Ticket created ${object.name}</field>
            <field name="body_html"><![CDATA[
            Dear ${ctx['name']},
                <p>Thank you for contacting the Trackedge Global Helpdesk.
                <br/>
                With this mail we confirm to have received your message in good order.
                <br/>
                Based on the nature of the request a helpdesk agent may contact you for further information.
                <br/>
                Via the link below you can always check the status of your ticket.
                <br/>
                Best regards,
                <br/>
                Team Trackedge

            <div style="margin: 16px 0px 16px 0px;">
                            <a href="https://trackedgetechnologies.com/helpdesk"
                                style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Go to Helpdesk
                            </a>
                        </div>

            <b>Your Trackedge HelpDesk Team.</b>
            ]]></field>
        </record>

        <record id="email_template_helpdesk_ticket_trackedge_ticket_update_assigned_template" model="mail.template">
            <field name="name">Helpdesk Email Template for stage update Ticket Template</field>
            <field name="model_id" ref="generic_request.model_request_request"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Trackedge Assist - Help Desk Ticket Update ${object.name}</field>
            <field name="body_html"><![CDATA[
            Hi ${ctx['name']},
            <p>
            Your Ticket is completed and check once again is it finished or not! 
            <div style="margin: 16px 0px 16px 0px;">
                            <a href=${ctx['url']}
                                style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Go to Helpdesk
                            </a>
                        </div>

            Kind regards,
            <b>Your Trackedge HelpDesk Team.</b>
            ]]></field>
        </record>

