            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${ctx.get('escalate_email')}</field>
            <field name="subject">Trackedge Assist- Helpdesk Ticket SLA Violation (${object.name})</field>
            <field name="body_html"><![CDATA[
    Dear ${object.escalate_user_id.name},
    <p>Please be informed that Ticket <a href=${ctx.get('url')}>${object.name}</a>,
    has exceeded the maximum allowed Stage time for Stage ${object.stage_id.name}</p>
