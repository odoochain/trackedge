<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="helpdesk_region_view_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Region</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.region</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create New Region
            </p>
        </field>
    </record>
    <menuitem name="Region"
              id="menu_helpdesk_region"
              parent="generic_request.menu_generic_tags_root"
              sequence="60"
              action="helpdesk_region_view_action"/>

    <record id="helpdesk_region_form_view" model="ir.ui.view">
        <field name="name">Helpdesk Region</field>
        <field name="model">helpdesk.region</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Region Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"
                                   required="1"/>
                        </group>
                        <group>
                            <field name="supervisor_id"
                                   required="1"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="description"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_region_tree_view" model="ir.ui.view">
        <field name="name">Helpdesk Region Tree View</field>
        <field name="model">helpdesk.region</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Region Tree">
                <field name="name"/>
                <field name="supervisor_id"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_region_search_view" model="ir.ui.view">
        <field name="name">Helpdesk Region Search View</field>
        <field name="model">helpdesk.region</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Region Search">
                <field name="name"/>
                <field name="supervisor_id"/>
            </search>
        </field>
    </record>
</odoo>