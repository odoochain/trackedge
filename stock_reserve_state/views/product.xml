<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_reservation_button" model="ir.ui.view">
        <field name="name">product.template.reservation.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-lock" invisible="type != 'product'" name="action_view_reservations" type="object">
                    <field name="onhold_count" string="On Hold" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" icon="fa-lock" invisible="type != 'product'" name="action_view_reservations" type="object">
                    <field name="faulty_count" string="Faulty" widget="statinfo"/>
                </button>
            </xpath></field>
    </record>
</odoo>
