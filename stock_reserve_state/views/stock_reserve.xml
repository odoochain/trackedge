<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_reservation_form_state" model="ir.ui.view">
        <field name="name">stock.reservation.form.state</field>
        <field name="model">stock.reservation</field>
        <field name="inherit_id" ref="stock_reserve.view_stock_reservation_form"/>
        <field name="arch" type="xml">
            <button name="open_move" position="after">
                <button name="update_lot_state" string="Update Lot States" type="object"/>
            </button>
            <field name="product_id" position="after">
                <field name="type"/>
                <field invisible="1" name="tracking"/></field>
            <xpath expr="//group" position="after">
                <notebook>
                    <page invisible="tracking == 'none'" string="Move Serial Numbers">
                        <button icon="fa-list" name="action_show_details" options='{"warn": true}' string="Register lots, packs, location" type="object"/>
                        <field name="move_line_ids"><tree>
                                <field name="lot_id" string="Serial Number"/>
                                <field name="qty_done"/>
                            </tree></field>
                    </page>
                </notebook>
            </xpath></field>
    </record>
</odoo>
